{
	"name": "download-directory",
	"private": true,
	"license": "MIT",
	"type": "module",
	"source": "index.html",
	"scripts": {
		"build": "run-s build:*",
		"build:bundle": "parcel build --dist-dir public --no-scope-hoist",
		"build:typescript": "tsc --noEmit",
		"fix": "xo --fix",
		"test": "run-p lint build test:*",
		"test:vitest": "vitest run",
		"lint": "xo",
		"start": "run-p watch:*",
		"watch": "npm start",
		"watch:build": "parcel serve --dist-dir public",
		"watch:typescript": "tsc --watch --noEmit",
		"watch:vitest": "vitest watch"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"rules": {
			"unicorn/better-regex": "off"
		}
	},
	"dependencies": {
		"jszip": "^3.10.1",
		"list-github-dir-content": "^4.0.3",
		"p-map": "^7.0.2",
		"p-retry": "^6.2.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^6.0.0",
		"buffer": "^6.0.3",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.12.0",
		"parcel-reporter-static-files-copy": "^1.5.3",
		"parcel-resolver-ignore": "^2.2.0",
		"process": "^0.11.10",
		"typed-query-selector": "^2.11.2",
		"typescript": "^5.5.3",
		"vitest": "^2.0.2",
		"xo": "^0.58.0"
	},
	"parcelIgnore": [
		"/\\?url"
	]
}
